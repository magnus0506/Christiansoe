@model Christiansoe.Models.Assignment

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Opgave titel</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label">Opgave beskrivelse</label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Difficulty" class="control-label">Sværhedsgrad</label>
                <select asp-for="Difficulty" class="form-control">
                    <option value="Let">Let</option>
                    <option value="Medium">Medium</option>
                    <option value="Svær">Svær</option>
                </select>
                <span asp-validation-for="Difficulty" class="text-danger"></span>
            </div>
            <label for="assignments">Vælg sværdhedsgrad</label>
            <select id="ass" name"ass">
                <option value="Let">Let</option>
                <option value="Medium">Medium</option>
                <option value="Svær">Svær</option>
            </select>

            <div class="form-group">
                <input type="submit" value="Tilføj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Annuller</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
